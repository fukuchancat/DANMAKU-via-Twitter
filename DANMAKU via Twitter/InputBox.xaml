<Window x:Class="DANMAKU_via_Twitter.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DANMAKU_via_Twitter"
        mc:Ignorable="d"
        Title="InputBox" Height="140" Width="200" Icon="pack://siteoforigin:,,,/app.ico">
    <Grid>
        <StackPanel Margin="5">
            <Label x:Name="label" Content="Enter your PIN code"/>
            <TextBox x:Name="textBox" Height="30" Margin="0,5"/>
            <Button x:Name="button" Content="OK" Click="button_Click"/>
        </StackPanel>

    </Grid>
</Window>
